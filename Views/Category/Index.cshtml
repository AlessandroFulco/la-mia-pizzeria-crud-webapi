@model List<Category>

@if (Model.Count() == 0)
{
    <h2>Non sono ci sono categorie</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    #
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category category in Model)
            {
                <tr>
                    @*<td><a href="@Url.Action("Detail",new {id = pizza.Id})">@pizza.Id</a></td>*@
                    <td>
                        <span>
                            @category.Id
                        </span>
                    </td>
                    <td class="title">
                        @category.Name
                    </td>
                    @if(category.Name != "nessuna selezionata")
                    {
                        <td class="detail">
                            <a href="@Url.Action("Detail", "Category", new {id = category.Id})" class="btn btn-primary rounded">Mostra</a>
                            <a href="@Url.Action("Update", "Category", new {id = category.Id})" class="btn btn-warning rounded">Modifica</a>

                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post">
                                <button class="btn btn-danger rounded">Elimina</button>
                            </form>
                        </td>
                    }
                </tr>
            }
        </tbody>


    </table>
}