@model Category

<div class="container">
    <div class="row">
        <div class="col-12">

            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo categoria</h1>
            </div>

            <form asp-controller="Category" asp-action="Update" asp-route-Id="@Model.Id" method="post">
                @Html.AntiForgeryToken()

                @*Name*@
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                @*btn invio form*@
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>