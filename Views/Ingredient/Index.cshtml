@model List<Ingredient>

@if (Model.Count() == 0)
{
    <h2>Non sono ci sono Ingredienti</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th colspan="3">
                    #
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ingredient ingredient in Model)
            {
                <tr>
                    <td>
                        <span>
                            @ingredient.Id
                        </span>
                    </td>
                    <td class="title">
                        @ingredient.Name
                    </td>
                    
                    <td colspan="3" class="detail">
                        <a href="@Url.Action("Detail", "Ingredient", new {id = ingredient.Id})" class="btn btn-primary rounded">Mostra</a>
                        <a href="@Url.Action("Update", "Ingredient", new {id = ingredient.Id})" class="btn btn-warning rounded">Modifica</a>

                        <form asp-controller="Ingredient" asp-action="Delete" asp-route-id="@ingredient.Id" method="post">
                            <button class="btn btn-danger rounded">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>


    </table>
}