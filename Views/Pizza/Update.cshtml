@using la_mia_pizzeria_static.Models.Form;

@model PizzaForm

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Modifica Pizza</h1>
            </div>
            <form asp-controller="Pizza" asp-action="Update" asp-route-Id="@Model.Pizza.Id" method="post">
                @Html.AntiForgeryToken()
                @*Name*@
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Pizza.Name" class="d-block w-100" />
                    <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                </div>

                @*Photo*@
                <div class="mb-3">
                    <strong>Foto:</strong>
                    <input asp-for="Pizza.Photo" rows="10" class="d-block w-100"></input>
                    <span asp-validation-for="Pizza.Photo" class="text-danger"></span>
                </div>
                @*Price*@
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="Pizza.Price" rows="10" class="d-block w-100"></input>
                    <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                </div>
                @*Description*@
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <textarea asp-for="Pizza.Description" class="d-block w-100"></textarea>
                    <span asp-validation-for="Pizza.Description" class="text-danger"></span>
                </div>
                @*Select category*@
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
                        @foreach (Category category in Model.Categories)
                        {
                            @if (Model.Pizza.CategoryId == category.Id)
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div>
                @*Select ingredients*@
                <div class="mb-3">
                    <strong>Ingredients:</strong>
                    <select asp-for="SelectedIngredients"
                            asp-items="@Model.Ingredients"
                            multiple="multiple"
                            size="5"
                            class="form-control mb-2 mr-sm-2 ml-sm-3 leftList">
                    </select>
                </div>
                @*btn invio form*@
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>