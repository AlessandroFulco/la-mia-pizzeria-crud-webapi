@model List<Pizza>

@if (Model.Count() == 0)
{
    <h2>Non sono ci sono pizze</h2>
}
else 
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Photo
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th>
                    #
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    @*<td><a href="@Url.Action("Detail",new {id = pizza.Id})">@pizza.Id</a></td>*@
                    <td>
                        <span>
                            @pizza.Id
                        </span>
                    </td>
                    <td class="image">
                        <img class="post-list-image" src="@pizza.Photo">
                    </td>
                    <td class="title">
                        @pizza.Name
                    </td>
                    <td class="description">
                        @pizza.Description
                    </td>
                    <td class="Category">
                        @pizza.Category.Name
                    </td>
                    <td class="price">
                        @pizza.Price
                    </td>
                    <td class="detail">
                        <a href="@Url.Action("Detail", "Pizza", new {id = pizza.Id})" class="btn btn-primary rounded">Mostra</a>
                        <a href="@Url.Action("Update", "Pizza", new {id = pizza.Id})" class="btn btn-warning rounded">Modifica</a>

                        <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                            <button class="btn btn-danger rounded">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
            
        
    </table>
}